#!/usr/bin/env bash

source ./bin/init-env

if [ $# -eq 0 ]
  then
    echo "Showing dev server logs"
    echo "You can check logs of either production or development"
    echo "e.g bin/show-logs dev"
    echo "e.g bin/show-logs prod"
fi

if [ $# -eq 1 ]
  then
  if [ $1 == "--help" ]
    then
      echo "Show server logs"
      echo "You can check logs of either production or development"
      echo "e.g bin/show-logs dev"
      echo "e.g bin/show-logs prod"
      exit 1
  fi
fi

PF_TARGET="${1:-dev}"

POSSIBLE_VALUES=("prod" "dev")

if [[ ! " ${POSSIBLE_VALUES[@]} " =~ " ${PF_TARGET} " ]]; then
  echo "target should be either: prod or dev"
  exit 1
fi

case "${PF_TARGET}" in
  'prod')
    docker logs --follow ${SERVICE_NAME}-prod-app;;
  'dev')
    docker logs --follow ${SERVICE_NAME}-dev-app;;
esac
