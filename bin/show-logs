#!/usr/bin/env bash

./bin/init-env

if [ $# -eq 0 ]
  then
    echo "need to provide the target platform"
    echo "e.g: ./show-logs dev"
    exit 1
fi

possible_values=("prod" "dev")

if [[ ! " $1 " =~ " ${target} " ]]; then
  echo "target should be either: prod or dev"
  exit 1
fi

case "$1" in
  'prod')
    docker logs --follow ${SERVICE_NAME}-prod-app;;
  'dev')
    docker logs --follow ${SERVICE_NAME}-dev-app;;
esac
